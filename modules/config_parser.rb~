module ConfigParser

   class Parser

     def initialize filename, filepath

       @filename = filename
       @filepath = filepath


       parse_config_file

     end


     def output_folder
       puts "output folder"
     end

     private


     def parse_config_file

       json_file = load_file

       byebug

     end


     def load_file
       File.read(@filepath  + @filename )
     end

   end

end
